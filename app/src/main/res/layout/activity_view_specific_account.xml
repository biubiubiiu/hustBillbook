<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ViewSpecificAccountActivity">

    <Toolbar
        android:id="@+id/toolbar_inViewSpecificAccount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:clickable="false"
        android:gravity="center"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accountName_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintEnd_toEndOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintStart_toStartOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintTop_toTopOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintVertical_bias="0.1"
        tools:text="现金账户" />

    <TextView
        android:id="@+id/setting_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/accountName_Specific"
        app:layout_constraintEnd_toEndOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintTop_toTopOf="@id/accountName_Specific" />

    <ImageView
        android:id="@+id/btn_back_Specific"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/img_back"
        app:layout_constraintBottom_toBottomOf="@id/accountName_Specific"
        app:layout_constraintEnd_toEndOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintTop_toTopOf="@id/accountName_Specific" />


    <TextView
        android:id="@+id/restMoney_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintEnd_toEndOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintStart_toStartOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintTop_toTopOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintVertical_bias="0.4"
        tools:text="500.00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accountBalance"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintEnd_toEndOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintStart_toStartOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintTop_toTopOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/liuru_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/influx"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintStart_toEndOf="@id/liuchu_Specific"
        app:layout_constraintEnd_toEndOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintTop_toTopOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/liuchu_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flow"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/liuru_Specific"
        app:layout_constraintEnd_toEndOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@id/toolbar_inViewSpecificAccount" />

    <TextView
        android:id="@+id/nian_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/year"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/liuru_Specific"
        app:layout_constraintStart_toStartOf="@id/year_Specific"
        app:layout_constraintEnd_toEndOf="@id/year_Specific"/>

    <TextView
        android:id="@+id/year_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintTop_toTopOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_inViewSpecificAccount"
        app:layout_constraintVertical_bias="0.82"
        tools:text="2019" />

    <TextView
        android:id="@+id/expense_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/year_Specific"
        app:layout_constraintStart_toStartOf="@id/liuchu_Specific"
        tools:text="300.20" />

    <TextView
        android:id="@+id/income_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/year_Specific"
        app:layout_constraintStart_toStartOf="@id/liuru_Specific"
        tools:text="500.06" />

    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_inViewSpecificAccount">

    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_Specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="?attr/colorPrimary"
        android:src="@drawable/img_jiahao"
        android:scaleType="center"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>